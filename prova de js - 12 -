<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="prova.js">
  <title>Gerenciador de Notas</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background-color: #f5f5f5;
    }

    h1 {
      text-align: center;
    }

    #note-form {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
    }

    input[type="text"] {
      padding: 10px;
      width: 250px;
    }

    button {
      padding: 10px;
      cursor: pointer;
    }

    ul {
      list-style-type: none;
      padding: 0;
      max-width: 400px;
      margin: auto;
    }

    li {
      background-color: white;
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .remove-btn {
      background-color: red;
      color: white;
      border: none;
      padding: 5px 10px;
    }
  </style>
</head>
<body>

  <h1>Gerenciador de Notas</h1>

  <div id="note-form">
    <input type="text" id="note-title" placeholder="Digite o título da nota">
    <button onclick="addNote()">Adicionar Nota</button>
  </div>

  <ul id="note-list"></ul>

  <script>
    
function getNotes() {
  const notesJSON = localStorage.getItem('notas');
  return notesJSON ? JSON.parse(notesJSON) : [];
}


function saveNotes(notes) {
  localStorage.setItem('notas', JSON.stringify(notes));
}


function renderNotes() {
  const noteList = document.getElementById('note-list');
  noteList.innerHTML = '';

  const notes = getNotes();

  notes.forEach((note) => {
    const li = document.createElement('li');
    li.textContent = note.titulo;

    const btn = document.createElement('button');
    btn.textContent = 'Remover';
    btn.className = 'remove-btn';
    btn.onclick = () => removeNote(note.titulo);

    li.appendChild(btn);
    noteList.appendChild(li);
  });
}


function addNote() {
  const input = document.getElementById('note-title');
  const titulo = input.value.trim();

  if (!titulo) {
    alert('Digite um título!');
    return;
  }

  const notes = getNotes();

  
  const exists = notes.some(note => note.titulo === titulo);
  if (exists) {
    alert('Nota com esse título já existe!');
    return;
  }

  notes.push({ titulo });
  saveNotes(notes);
  input.value = '';
  renderNotes();
}


function removeNote(titulo) {
  let notes = getNotes();
  notes = notes.filter(note => note.titulo !== titulo);
  saveNotes(notes);
  renderNotes();
}


renderNotes();
  </script>
  
</body>
</html>
